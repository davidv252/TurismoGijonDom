<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.merche.asociacionesgijondom.informacion.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/finalImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/finalNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:paddingLeft="15dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/finalTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="983303030"
                android:paddingLeft="15dp"
                android:onClick="Llamar"/>


        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/finalDescripcion"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="Descripcion" />



    <Button
        android:id="@+id/finalLocalizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localizacion"
        android:layout_gravity="center"/>




</LinearLayout>
